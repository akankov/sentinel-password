{
  "name": "@sentinel-password/core",
  "version": "0.1.2",
  "type": "module",
  "description": "Modern, zero-dependency TypeScript password validation with bloom filter-based common password detection. 90%+ test coverage, <5KB gzipped.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "password",
    "validation",
    "security",
    "typescript",
    "zxcvbn",
    "strength",
    "entropy",
    "password-validator",
    "password-strength",
    "authentication",
    "zero-dependency",
    "bloom-filter"
  ],
  "author": "Aleksei Kankov <akankov@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akankov/sentinel-password",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/akankov/sentinel-password#readme",
  "bugs": {
    "url": "https://github.com/akankov/sentinel-password/issues"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.14",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
